<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.code19.moneta.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.code19.monetaui.widget.CountDownView
            android:id="@+id/cdv_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            app:init_time="10"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"/>

        <Button
            android:id="@+id/btn_start_countdown"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="开始倒计时"/>

        <Button
            android:id="@+id/btn_alert_dialog"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="弹出对话框"/>

        <Button
            android:id="@+id/btn_alert_toast"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="弹出吐司"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
